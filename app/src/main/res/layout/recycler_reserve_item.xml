<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/text_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_marginStart="5dp"
        android:textColor="@android:color/black"/>

    <View
        android:id="@+id/recycler_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/black"
        app:layout_constraintTop_toBottomOf="@id/text_title"/>

    <TextView
        android:id="@+id/text_seat_num_one"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/number_one"
        app:layout_constraintTop_toBottomOf="@id/text_title"
        app:layout_constraintStart_toStartOf="@id/imgButt_seat_one"
        app:layout_constraintEnd_toEndOf="@id/imgButt_seat_one"
        android:textSize="12sp"
        android:layout_marginTop="10dp"
        android:textColor="@android:color/black"/>

    <ImageButton
        android:id="@+id/imgButt_seat_one"
        android:layout_width="30dp"
        android:visibility="invisible"
        android:layout_height="30dp"
        android:background="@drawable/seat"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_seat_num_one"
        app:layout_constraintEnd_toStartOf="@id/imgButt_seat_two"
        android:layout_marginStart="5dp"
        app:layout_constraintVertical_weight="1"/>

    <TextView
        android:id="@+id/text_time_one"
        android:layout_width="wrap_content"
        android:visibility="invisible"
        android:layout_height="wrap_content"
        android:text="@string/time_temp"
        app:layout_constraintTop_toBottomOf="@id/imgButt_seat_one"
        app:layout_constraintStart_toStartOf="@id/imgButt_seat_one"
        app:layout_constraintEnd_toEndOf="@id/imgButt_seat_one"
        android:textSize="12sp"/>


    <TextView
        android:id="@+id/text_seat_num_two"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/number_two"
        app:layout_constraintTop_toBottomOf="@id/text_title"
        app:layout_constraintStart_toStartOf="@id/imgButt_seat_two"
        app:layout_constraintEnd_toEndOf="@id/imgButt_seat_two"
        app:layout_constraintTop_toTopOf="@id/text_seat_num_one"
        android:textSize="12sp"
        android:layout_marginTop="5dp"
        android:textColor="@android:color/black"/>

    <ImageButton
        android:id="@+id/imgButt_seat_two"
        android:layout_width="30dp"
        android:visibility="invisible"
        android:layout_height="30dp"
        android:background="@drawable/seat"
        app:layout_constraintStart_toEndOf="@id/imgButt_seat_one"
        app:layout_constraintTop_toBottomOf="@id/text_seat_num_two"
        app:layout_constraintEnd_toStartOf="@id/imgButt_seat_three"
        android:layout_marginStart="10dp" />

    <TextView
        android:id="@+id/text_time_two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:text="@string/time_temp"
        app:layout_constraintTop_toBottomOf="@id/imgButt_seat_two"
        app:layout_constraintStart_toStartOf="@id/imgButt_seat_two"
        app:layout_constraintEnd_toEndOf="@id/imgButt_seat_two"
        android:textSize="12sp"/>

    <TextView
        android:id="@+id/text_seat_num_three"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/number_two"
        android:visibility="invisible"
        app:layout_constraintTop_toBottomOf="@id/text_title"
        app:layout_constraintStart_toStartOf="@id/imgButt_seat_three"
        app:layout_constraintEnd_toEndOf="@id/imgButt_seat_three"
        android:textSize="12sp"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toTopOf="@id/text_seat_num_one"
        android:textColor="@android:color/black"/>

    <ImageButton
        android:id="@+id/imgButt_seat_three"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/seat"
        android:visibility="invisible"
        app:layout_constraintStart_toEndOf="@id/imgButt_seat_two"
        app:layout_constraintTop_toBottomOf="@id/text_seat_num_three"
        app:layout_constraintEnd_toStartOf="@id/imgButt_seat_fourth"
        android:layout_marginStart="10dp"/>

    <TextView
        android:id="@+id/text_time_three"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:text="@string/time_temp"
        app:layout_constraintTop_toBottomOf="@id/imgButt_seat_three"
        app:layout_constraintStart_toStartOf="@id/imgButt_seat_three"
        app:layout_constraintEnd_toEndOf="@id/imgButt_seat_three"
        android:textSize="12sp"/>

    <TextView
        android:id="@+id/text_seat_num_fourth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/number_two"
        app:layout_constraintTop_toTopOf="@id/text_seat_num_one"
        android:visibility="invisible"
        app:layout_constraintTop_toBottomOf="@id/text_title"
        app:layout_constraintStart_toStartOf="@id/imgButt_seat_fourth"
        app:layout_constraintEnd_toEndOf="@id/imgButt_seat_fourth"
        android:textSize="12sp"
        android:layout_marginTop="5dp"
        android:textColor="@android:color/black"/>

    <ImageButton
        android:id="@+id/imgButt_seat_fourth"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/seat"
        android:visibility="invisible"
        app:layout_constraintStart_toEndOf="@id/imgButt_seat_three"
        app:layout_constraintTop_toBottomOf="@id/text_seat_num_fourth"
        app:layout_constraintEnd_toStartOf="@id/imgButt_seat_five"
        android:layout_marginStart="10dp"/>

    <TextView
        android:id="@+id/text_time_fourth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:text="@string/time_temp"
        app:layout_constraintTop_toBottomOf="@id/imgButt_seat_fourth"
        app:layout_constraintStart_toStartOf="@id/imgButt_seat_fourth"
        app:layout_constraintEnd_toEndOf="@id/imgButt_seat_fourth"
        android:textSize="12sp"/>

    <TextView
        android:id="@+id/text_seat_num_five"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/number_two"
        android:visibility="invisible"
        app:layout_constraintTop_toBottomOf="@id/text_title"
        app:layout_constraintStart_toStartOf="@id/imgButt_seat_five"
        app:layout_constraintEnd_toEndOf="@id/imgButt_seat_five"
        app:layout_constraintTop_toTopOf="@id/text_seat_num_one"
        android:textSize="12sp"
        android:layout_marginTop="5dp"
        android:textColor="@android:color/black"/>

    <ImageButton
        android:id="@+id/imgButt_seat_five"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:visibility="invisible"
        android:background="@drawable/seat"
        app:layout_constraintStart_toEndOf="@id/imgButt_seat_fourth"
        app:layout_constraintTop_toBottomOf="@id/text_seat_num_five"
        android:layout_marginStart="10dp"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/text_time_five"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:text="@string/time_temp"
        app:layout_constraintTop_toBottomOf="@id/imgButt_seat_five"
        app:layout_constraintStart_toStartOf="@id/imgButt_seat_five"
        app:layout_constraintEnd_toEndOf="@id/imgButt_seat_five"
        android:textSize="12sp" />

</android.support.constraint.ConstraintLayout>